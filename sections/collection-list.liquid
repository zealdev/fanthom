            "value": "2",
            "label": "2 columns"
          }, {
            "value": "3",
            "label": "3 columns"
          }, {
            "value": "4",
            "label": "4 columns"
          }, {
            "value": "5",
            "label": "5 columns"
          }
        ],
        "default": "4"
      }, {
        "type": "select",
        "id": "columns_mobile",
        "label": "Number of columns on mobile",
        "options": [
          {
            "value": "1",
            "label": "1 column"
          }, {
            "value": "2",
            "label": "2 columns"
          }
        ],
        "default": "1"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 3,
        "step": 0.1,
        "unit": "x",
        "label": "Padding top",
        "default": 1
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 3,
        "step": 0.1,
        "unit": "x",
        "label": "Padding bottom",
        "default": 1
      }, {
        "type": "header",
        "content": "Content"
      }, {
        "type": "checkbox",
        "id": "center_heading_text",
        "label": "Center heading text",
        "default": true
      }, {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Collection list"
      }, {
        "type": "select",
        "id": "heading_size",
        "label": "Heading size",
        "options": [
          {
            "value": "h2",
            "label": "Medium"
          }, {
            "value": "h1",
            "label": "Large"
          }, {
            "value": "h0",
            "label": "Extra large"
          }
        ],
        "default": "h2"
      }, {
        "type": "richtext",
        "id": "text",
        "label": "Text"
