        "default": "full"
      },
      {
        "type": "collection_list",
        "id": "collection_list",
        "label": "Collections"
      },
      {
        "type": "checkbox",
        "id": "slider_large",
        "label": "Enable slider on large screens",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "slider_mobile",
        "label": "Enable slider on mobile",
        "default": false
